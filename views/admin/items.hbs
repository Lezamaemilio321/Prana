    <div class="items-container">
        {{{ renderAdminItems items "all" }}}
        <script src="/js/script.js" class="refresh-script"></script>
    </div>
    </div>

</section>

<script>
    const categorySelect = document.querySelector('.category-select');
    const itemsGrid = document.querySelector('.items-container');
    const all = `{{{ renderAdminItems items "all" }}}`
    const camas = `{{{ renderAdminItems items "camas" }}}`
    const buros = `{{{ renderAdminItems items "buros" }}}`
    const comodas = `{{{ renderAdminItems items "comodas" }}}`
    const espejos = `{{{ renderAdminItems items "espejos" }}}`
    const accesorios = `{{{ renderAdminItems items "accesorios" }}}`
    const mesascentro = `{{{ renderAdminItems items "mesascentro" }}}`
    const salas = `{{{ renderAdminItems items "salas" }}}`
    const consolas = `{{{ renderAdminItems items "consolas" }}}`
    const mueblestv = `{{{ renderAdminItems items "mueblestv" }}}`
    const comedores = `{{{ renderAdminItems items "comedores" }}}`
    const sillas = `{{{ renderAdminItems items "sillas" }}}`
    const libreros = `{{{ renderAdminItems items "libreros" }}}`
    const escritorios = `{{{ renderAdminItems items "escritorios" }}}`
    const macrame = `{{{ renderAdminItems items "macrame" }}}`
    const lamparas = `{{{ renderAdminItems items "lamparas" }}}`
    const deco = `{{{ renderAdminItems items "deco" }}}`
    const otros = `{{{ renderAdminItems items "otros" }}}`
    function checkCategory (event) {
        switch (event.target.value) {
            case 'all':
                return all;
            case 'camas':
                return camas
            case 'buros':
                return buros
            case 'comodas':
                return comodas
            case 'espejos':
                return espejos
            case 'accesorios':
                return accesorios
            case 'mesascentro':
                return mesascentro
            case 'salas':
                return salas
            case 'consolas':
                return consolas
            case 'mueblestv':
                return mueblestv
            case 'comedores':
                return comedores
            case 'sillas':
                return sillas
            case 'libreros':
                return libreros
            case 'escritorios':
                return escritorios
            case 'macrame':
                return macrame
            case 'lamparas':
                return lamparas
            case 'deco':
                return deco
            case 'otros':
                return otros
            default:
                return all;
        }
    }
    categorySelect.addEventListener('change', (e) => {
        let oldScript = itemsGrid.querySelector('.refresh-script');
        if (oldScript) {
                itemsGrid.removeChild(oldScript);
        }
        delete oldScript;
        delete infoButtons;
        delete section;
        itemsGrid.innerHTML = (checkCategory(e));
        let script = document.createElement('script');
        script.setAttribute('src', '/js/script.js');
        script.classList.add('refresh-script');
        itemsGrid.appendChild(script);
    });
</script>

